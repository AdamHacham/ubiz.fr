extends partials/layout
block content
  .container.mt-5
    h1 Inscription
    +alert(message)

    form#registerForm(method='POST' action='/register')
      .form-group
        label(for='lastname')
          | Nom
          sup.text-danger *
        input#lastname.form-control(
          class=errors.lastname ? 'is-invalid': '',
          value=formData.lastname,
          type='text',
          name='lastname',
          maxlength='64',
          minlength='2'
          required
        )
        +err(errors.lastname)

      .form-group
        label(for='firstname')
          | Pr√©nom
          sup.text-danger *
        input#firstname.form-control(
          class=errors.firstname ? 'is-invalid': '',
          value=formData.firstname,
          type='text',
          name='firstname',
          maxlength='64',
          minlength='2'
          required
        )
        +err(errors.firstname)

      .form-group
        label(for='email')
          | Email address
          sup.text-danger *
        input#email.form-control(
          class=errors.email ? 'is-invalid' : '',
          value=formData.email
          type='email',
          name='email',
          aria-describedby='emailHelp',
          maxlength='128',
          required
        )
        +err(errors.email)
        small#emailHelp.form-text.text-muted We'll never share your email with anyone else.

      .form-group
        label(for='password')
          | Password
          sup.text-danger *
        input#password.form-control(
          class=errors.password ? 'is-invalid' : '',
          type='password'
          name='password'
          required
        )
        +err(errors.password)

      .form-group
        label(for='repeat_password')
          | Repeat Password
          sup.text-danger *
        input.form-control#repeat_password(
          type='password',
          name='repeat_password',
          required
        )

      .form-group.form-check
        input.form-check-input#agree(type='checkbox')
        label.form-check-label(for='agree') I agree

      button#submit.btn.btn-primary(type='submit') Submit
